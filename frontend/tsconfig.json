{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020",
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "useDefineForClassFields": true,
    },
    "include": [
        "./src",
        "./dist/types/**/*.ts",
        "./next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "./node_modules"
    ],
}
